@{
    ViewData["Title"] = "Students";
}

@model StudentModel

@{
    if (Model.Id == 0)
    {
        <h2>Add Student</h2>
    }
    else
    {
        <h2>Update Student</h2>
    }
}
<form asp-controller="Students" asp-action="Create">
    <input asp-for="Id" hidden />

    <div class="form-group">
        <label asp-for="Name">Name:</label>
        <input type="text" class="form-control" asp-for="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Surname">Surname:</label>
        <input type="text" class="form-control" asp-for="Surname">
        <span asp-validation-for="Surname" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BirthDate">Name:</label>
        <input type="date" class="form-control" asp-for="BirthDate">
        <span asp-validation-for="BirthDate" class="text-danger"></span>
    </div>
    
    <button type="submit" class="btn btn-primary">Save</button>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}