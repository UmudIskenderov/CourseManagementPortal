@{
    ViewData["Title"] = "Teachers";
}

@model TeacherModel

@{
    if (Model == null)
    {
        <h2>Add Teacher</h2>
    }
    else
    {
        <h2>Update Teacher</h2>
    }
}
<form asp-controller="Teachers" asp-action="Create">
    <input asp-for="Id" hidden />

    <div class="form-group">
        <label asp-for="Name">Name:</label>
        <input type="text" class="form-control" asp-for="Name">
    </div>

    <div class="form-group">
        <label asp-for="Surname">Surname:</label>
        <input type="text" class="form-control" asp-for="Surname">
    </div>

    <div class="form-group">
        <label asp-for="BirthDate">BirthDate:</label>
        <input type="date" class="form-control" asp-for="BirthDate">
    </div>

    <div class="form-group">
        <label asp-for="Profession">Profession:</label>
        <input type="text" class="form-control" asp-for="Profession">
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>
