@{
    ViewData["Title"] = "Courses";
}

@model CourseModel

@{
    if (Model.Id == 0)
    {
        <h2>Add Course</h2>
    }
    else
    {
        <h2>Update Course</h2>
    }
}
<form asp-controller="Courses" asp-action="Save">
    <input asp-for="Id" hidden/>

    <div class="form-group">
        <label asp-for="Name">Name:</label>
        <input type="text" class="form-control" asp-for="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Duration">Duration (Month):</label>
        <input type="number" class="form-control" asp-for="Duration">
        <span asp-validation-for="Duration" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price">Price (AZN):</label>
        <input type="number" step="any" class="form-control" asp-for="Price">
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}